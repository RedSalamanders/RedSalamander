    IDS_VIEWERPE_EXPORT_DIALOG_TITLE "Export PE report"
    IDS_VIEWERPE_EXPORT_FILTER_TEXT "Text files (*.txt)"
    IDS_VIEWERPE_EXPORT_FILTER_MARKDOWN "Markdown files (*.md)"
    IDS_VIEWERPE_EXPORT_ERROR_NO_REPORT "No report is available to export yet."
    IDS_VIEWERPE_EXPORT_ERROR_FAILED "Failed to export the report."
END
