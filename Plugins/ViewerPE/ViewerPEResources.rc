#include "resource.h"

#include <windows.h>

/////////////////////////////////////////////////////////////////////////////
//
// Menu
//

IDR_VIEWERPE_MENU MENU
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "Export as &Text...\tCtrl+S", IDM_VIEWERPE_FILE_EXPORT_TEXT
        MENUITEM "Export as &Markdown...\tCtrl+Shift+S", IDM_VIEWERPE_FILE_EXPORT_MARKDOWN
        MENUITEM "&Refresh\tF5", IDM_VIEWERPE_FILE_REFRESH
        POPUP "Other &Files"
        BEGIN
            MENUITEM "&Next\tSpace, Ctrl+Down", IDM_VIEWERPE_OTHER_NEXT
            MENUITEM "&Previous\tBackspace, Ctrl+Up", IDM_VIEWERPE_OTHER_PREVIOUS
            MENUITEM "&First\tCtrl+Home", IDM_VIEWERPE_OTHER_FIRST
            MENUITEM "&Last\tCtrl+End", IDM_VIEWERPE_OTHER_LAST
        END
        MENUITEM SEPARATOR
        MENUITEM "E&xit\tEsc", IDM_VIEWERPE_FILE_EXIT
    END
    POPUP "&View"
    BEGIN
        MENUITEM "Go to &Top\tHome", IDM_VIEWERPE_VIEW_GOTO_TOP
        MENUITEM "Go to &Bottom\tEnd", IDM_VIEWERPE_VIEW_GOTO_BOTTOM
    END
END

